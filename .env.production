# Production environment variables for Adyen Integration
NODE_ENV=production

# Ports
API_PORT=8054
WEB_PORT=9807

# Database - Production MySQL/PostgreSQL
DB_HOST=your-production-db-host
DB_PORT=3306
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_NAME=adyen_payout_production

# Auth - MUST BE CHANGED FOR PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum

# Adyen Production Configuration
ADYEN_API_KEY=your-live-adyen-api-key
ADYEN_MERCHANT_ACCOUNT=your-merchant-account
ADYEN_HMAC_KEY=your-production-hmac-key-for-webhooks
ADYEN_ENV=live
ADYEN_PAYOUT_ENDPOINT=https://pal-live.adyen.com/pal/servlet/Payout/v68

# Adyen Balance Platform (Optional)
ADYEN_USE_BALANCE_PLATFORM=true
ADYEN_BALANCE_ACCOUNT_ID=your-balance-account-id

# Budget Fallback (if not using Balance Platform)
AVAILABLE_PAYOUT_BUDGET=100000.00

# Security
CORS_ORIGINS=https://your-production-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
